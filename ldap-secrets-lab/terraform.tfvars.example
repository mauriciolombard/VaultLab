# AWS Region
aws_region = "us-east-1"

# Cluster name prefix
cluster_name = "ldaplab"

# Vault version (Enterprise)
vault_version = "1.20.2+ent"

# Vault Enterprise license (required)
vault_license = "your-license-here"

# EC2 instance type (t3.micro for cost savings)
instance_type = "t3.micro"

# VPC CIDR block (different from awskms-autounseal to avoid conflicts)
vpc_cidr = "10.1.0.0/16"

# SSH access restrictions (default: open)
allowed_ssh_cidrs = ["0.0.0.0/0"]

# Vault API access restrictions
allowed_vault_cidrs = ["0.0.0.0/0"]

# OpenLDAP configuration
ldap_admin_password = "admin123"
ldap_domain         = "vaultlab.local"
ldap_organisation   = "VaultLab"

# Enable TLS for LDAP (false = plaintext for easier troubleshooting)
enable_ldap_tls = false
